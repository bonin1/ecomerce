<!-- Main-product-section -->
<main id="ProductMain">
    <section id="ProductSection">
        <aside class="Main-image ImageSlider aside">
            <div class="slideshow-container">
                <% images.forEach((image, index) => { %>
                    <div class="mySlides fade1">
                        <img onclick="openFullscreen(this)" data-index="<%= index %>" class="clickable-image" src="data:image/jpeg;base64,<%= image.foto_produktit.toString('base64') %>" alt="Product Image">
                    </div>
                <% }); %>
                

                <% images.forEach((image, index) => { %>
                    <div id="fullscreenDiv"onclick="closeFullscreen()" class="fullscreen-overlay">
                        <span class="close-btn" onclick="closeFullscreen()">&times;</span>
                        <img src="data:image/jpeg;base64,<%= image.foto_produktit.toString('base64') %>" style="max-width: 100%; max-height: 100%;" onclick="stopPropagation(event)"">
                    </div>
                <% }); %>

                <footer>
                    <a class="prev" onclick="plusSlides(-1)">❮</a>
                    <div class="dot-container" style="text-align: center;">
                        <% images.forEach((image, index) => { %>
                            <span class="dot" data-index="<%= index %>" onclick="handleDotClick(this)">
                                <img src="data:image/jpeg;base64,<%= image.foto_produktit.toString('base64') %>" alt="Thumbnail Image">
                            </span>
                        <% }); %>
                        
                    </div>
                    <a class="next" onclick="plusSlides(1)">❯</a>
                </footer>
            </div>
        </aside>
        <aside class="ProductInsights aside">
            <div class="CompanyName">
                <a href="">
                    <%= item.company_name %>
                </a>
            </div>

            <div class="ProductName">
                <h1>
                    <%= item.emri_produktit %>
                </h1>
            </div>

            <form action="/produkt/<%= item.id %>" method="POST">
                <input type="hidden" name="product_id" value="<%= item.id %>">
                <input type="hidden" name="comment" value="<%= item.comment %>">
                <div class="RatingsDiv">
                    <div class="average_rating">
                        <svg width="15" height="15" fill="#ffffff" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.469 22.5a.75.75 0 0 1-.44-.14L12 17.99l-6.029 4.37a.75.75 0 0 1-1.15-.847l2.35-6.965-6.093-4.178A.75.75 0 0 1 1.5 9h7.518l2.268-6.981a.75.75 0 0 1 1.427 0l2.27 6.984H22.5a.75.75 0 0 1 .424 1.369l-6.096 4.176 2.35 6.963a.75.75 0 0 1-.71.99Z"></path>
                        </svg>
                        <%=averageRating%>
                    </div>
                    <span class="block_rating__reviews"> <%= reviewCount %> Reviews </span>
                </div>
                <div class="block_rating clearfix">
                    <fieldset class="block_rating__stars">
                        <input type="radio" id="star5" name="rating" value="5"/><label
                            class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4half" name="rating"
                                value="4 and a half"/><label class="half" for="star4half"
                                title="Pretty good - 4.5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4"/><label
                            class="full" for="star4" title="Good - 4 stars"></label>
                        <input type="radio" id="star3half" name="rating"
                                value="3 and a half"/><label class="half" for="star3half"
                                title="Above average - 3.5 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3"/><label
                            class="full" for="star3" title="Average - 3 stars"></label>
                        <input type="radio" id="star2half" name="rating"
                                value="2 and a half"/><label class="half" for="star2half"
                                title="Kinda bad - 2.5 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2"/><label
                            class="full" for="star2"
                            title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1half" name="rating"
                                value="1 and a half"/><label class="half" for="star1half"
                                title="Meh - 1.5 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1"/><label
                            class="full" for="star1"
                            title="Sucks big time - 1 star"></label>
                        <input type="radio" id="starhalf" name="rating" value="half"/><label
                            class="half" for="starhalf"
                            title="Sucks big time - 0.5 stars"></label>
                    </fieldset>
                
                    <input type="submit" value="Submit review">
                </div>
            </form>
            
            <div class="PriceDiv">
                <h1>
                    <%= item.cmimi_produktit %> €
                </h1>
                <svg width="10" height="10" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g clip-path="url(#clip0_230_2)">
                        <path d="M18 4C15.2311 4 12.5243 4.82109 10.222 6.35943C7.91973 7.89777 6.12532 10.0843 5.06569 12.6424C4.00607 15.2006 3.72882 18.0155 4.26901 20.7313C4.80921 23.447 6.14258 25.9416 8.10051 27.8995C10.0584 29.8574 12.553 31.1908 15.2687 31.731C17.9845 32.2712 20.7994 31.9939 23.3576 30.9343C25.9157 29.8747 28.1022 28.0803 29.6406 25.778C31.1789 23.4757 32 20.7689 32 18C32 14.287 30.525 10.726 27.8995 8.1005C25.274 5.475 21.713 4 18 4Z" fill="black"/>
