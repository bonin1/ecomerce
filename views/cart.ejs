                                        <button class="remove-from-cart" data-id="<%= item.produkt_id %>">Remove</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    <% } %>
            </div>
            <div class="second-part">
                <div class="total-card">
                    <div class="inside-card">
                        
                    </div>
                    <div class="button-check">
                        <a id="checkout" href="">Check-out</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

