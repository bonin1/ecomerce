    <h1 style="text-align: center; text-transform: uppercase;">Page under maintenance</h1>
    <div class="main">
        <div class="container1">
            <div class="first-part">
                    <% if (items.length === 0) { %>
                        <p class="skaprod">No products in your cart</p>
                    <% } else { %>
                        <% items.forEach(item => { %>
                            
                            <div class="cart-card">
                            <div class="item">
                                <div class="img">
                                    <img class="img-cart" src="<%= item.foto_produktit %>" alt="">
