<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../static/css/protected.css">
    <link rel="stylesheet" href="../static/js/protected.js">
    <link rel="stylesheet" href="../static/image/">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/static/js/protected.js">
</head>
<body>
        <div class="card-1">
            <form action="/produkt/register" class="form-product" method="POST">
                <input type="text" name="emri_produktit" placeholder="Emri produktit">
                <textarea name="pershkrimi_produktit" placeholder="Pershkrimi produktit" id="" cols="30" rows="10"></textarea>
                <input type="text" name="cmimi_produktit" placeholder="cmimi i produktit">
                <input type="text" name="origjina_produktit" placeholder="origjina produktit">
                <input type="number" name="sasia_produktit" placeholder="sasia" id="">
                <input type="text" name="foto_produktit" placeholder="URL produktit">
                <select name="kategoria" id="">
                    <option value="studiodevices">Studio Devices</option>
                    <option value="gaming">Gaming</option>
                    <option value="phone&headphones">phone&headphones</option>
                    <option value="watches&cameras">Watches&cameras</option>
                </select>
                <input type="submit" value="submit">
            </form>
        </div>
        <div class="card-2">
            <div class="form-search">
                <form id="search-form">
                    <input type="text" id="search-query" placeholder="Search...">
                    <button class="searchi" type="submit">Search</button>
                </form>
                <div id="search-results"></div>
            </div>
        </div>

    <% if (typeof alert !== 'undefined') { %>
        <% if (alert === 'Ky produkt ekziston') { %>
            <div class="alert alert-danger alert-dismissible fade show fixed-top" role="alert">
                <%= alert %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } else { %>
            <div class="alert alert-success alert-dismissible fade show fixed-top" role="alert">
                <%= alert %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
    <% } %>

    <script>
        document.getElementById('search-form').addEventListener('submit', function(event) {
    event.preventDefault();

    var searchQuery = document.getElementById('search-query').value;
    if (searchQuery === '') {
        var searchResultsDiv = document.getElementById('search-results');
        searchResultsDiv.innerHTML = '';
        return;
    }

    fetch('/search', {
        method: 'POST',
        body: JSON.stringify({
            query: document.getElementById('search-query').value
        }),
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(function(response) {
        return response.json();
    })
    .then(function(results) {
        var searchResultsDiv = document.getElementById('search-results');
        searchResultsDiv.innerHTML = '';
        for (var i = 0; i < results.length; i++) {
            (function(i) {
                var resultItem = document.createElement('div');
                resultItem.innerHTML = results[i].emri_produktit;
                resultItem.className = 'produktet-search';
                resultItem.addEventListener('click', function() {
                    window.location = '/item/' + results[i].id;
                });
            searchResultsDiv.appendChild(resultItem);
            })(i);
        }
    });
});
    </script>
</body>
</html>



