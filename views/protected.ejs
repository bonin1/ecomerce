<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../static/css/protected.css">
</head>
<body>
    <div id="user-count"></div>

        <div class="left-page">
            <form id="search-form">
                <input type="text" name="keyword" class="search-input" placeholder="Search by id or name">
                <div id="search-results"></div>
            </form>
        </div>
        <div class="right-page">
            <form id="search-form">
                <input type="text" name="keyword" class="search-input" placeholder="Search by id or name">
                <div id="search-results">
                </div>
            </form>
        </div>
<script>
    const form = document.getElementById('search-form');
    const resultsDiv = document.getElementById('search-results');
    
    form.addEventListener('submit', (event) => {
        event.preventDefault();
        const keyword = form.elements.keyword.value;

        if (!keyword) {
            resultsDiv.innerHTML = '';
            resultsDiv.style.display = 'none';
            return;
        }
        

        fetch(`/search?keyword=${keyword}`)
        .then((response) => response.json())
        .then((data) => {
            if (data.length === 0) {
                resultsDiv.innerHTML = '';
                resultsDiv.style.display = 'none';
                return;
            }
            resultsDiv.innerHTML = '';
            resultsDiv.style.display = 'block';
            data.forEach((item) => {
                const div = document.createElement('div');
                div.innerHTML = `<p class="item">${item.id} - ${item.emri} - ${item.email}</p>`;

                const deleteButton = document.createElement('button');
                deleteButton.innerHTML = 'X';
                deleteButton.classList.add('delete-button');
                deleteButton.addEventListener('click', () => {
                    fetch(`/delete/${item.id}`, { method: 'DELETE' })
                    .then(() => {
                        resultsDiv.removeChild(div);
                        alert(`Useri me emrin ${item.emri} dhe emailin (${item.email}) eshte fshire nga lista`);
                    });
                });
                
                div.querySelector('.item').appendChild(deleteButton);
                resultsDiv.appendChild(div);
            });
        });
    });
    

    </script>
</body>
</html>



